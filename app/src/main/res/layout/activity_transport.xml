<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="ladyjek.twiscode.com.ladyjek.Activity.ActivityTransport">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="#8ccccccc"
                android:paddingTop="10dp">


                <AutoCompleteTextView
                    android:id="@+id/txtFrom"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/plain_grey_primary_dark"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:lines="1"
                    android:hint="From"
                    android:paddingLeft="15dp"
                    android:textSize="15sp"
                    android:editable="false"
                    android:selectAllOnFocus="true"
                    />

                <AutoCompleteTextView
                    android:id="@+id/txtDestination"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtFrom"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/plain_grey_primary_dark"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:lines="1"
                    android:hint="Destination"
                    android:paddingLeft="15dp"
                    android:selectAllOnFocus="true"
                    android:editable="false"
                    android:textSize="15sp" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="270dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mapView"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/layoutMarkerFrom"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:visibility="visible"
                    >
                    <Button
                        android:id="@+id/btnLocationFrom"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:background="@drawable/plain_gradient_bg_btn"
                        android:text="Use This Location"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        />
                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/txtLocationFrom"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/white_color"
                            android:gravity="center"
                            android:padding="3dp"
                            android:textSize="12sp"
                            />
                        <ProgressBar
                            android:id="@+id/progressMapFrom"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:padding="10dp"
                            style="@android:style/Widget.ProgressBar.Small"
                            />

                    </RelativeLayout>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="70dp"
                        android:src="@drawable/blue_marker" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutMarkerDestination"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:visibility="gone"
                    >
                    <Button
                        android:id="@+id/btnLocationDestination"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:background="@drawable/plain_gradient_bg_btn"
                        android:text="Use This Location"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        />
                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/txtLocationDestination"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/white_color"
                            android:gravity="center"
                            android:padding="3dp"
                            android:textSize="12sp"
                            />
                        <ProgressBar
                            android:id="@+id/progressMapDestination"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:padding="10dp"
                            style="@android:style/Widget.ProgressBar.Small"
                            />

                    </RelativeLayout>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="70dp"
                        android:src="@drawable/red_marker" />
                </LinearLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">

                <Button
                    android:id="@+id/btnRequestRide"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/plain_gradient_bg_btn"
                    android:text="request ride"
                    android:textColor="@color/white_color" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
