<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true" android:focusableInTouchMode="true"
    tools:context="ladyjek.twiscode.com.ladyjek.Activity.ActivityTransport"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                >
                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    class="com.google.android.gms.maps.SupportMapFragment" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_color">
                    <TextView
                        android:id="@+id/txtEstimate"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="Estimasi waktu menunggu : 5 min"
                        android:textColor="@color/bg_grad_2"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/imgDriver"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:background="@drawable/img_driver_default"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/plain_gradient_bg_btn">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:id="@+id/nameDriver"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textColor="@color/white_color"
                                        android:textStyle="bold"
                                        android:textSize="16dp"
                                        android:text="Dewi Handayani"/>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/rateDriver"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textColor="@color/white_color"
                                            android:textStyle="bold"
                                            android:textSize="16dp"
                                            android:text="4.8"
                                            android:layout_gravity="center"/>
                                        <ImageView
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:src="@drawable/white_arrow"
                                            android:layout_gravity="center"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/platDriver"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white_color"
                                    android:textStyle="bold"
                                    android:textSize="16dp"
                                    android:text="B 1234 AB"/>
                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">
                                    <Button
                                        android:id="@+id/btnCall"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/call"
                                        android:textSize="16dp"
                                        android:textColor="@color/white_color"
                                        android:textStyle="bold"
                                        android:layout_marginRight="5dp"/>
                                    <Button
                                        android:id="@+id/btnSMS"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/message"
                                        android:textSize="16dp"
                                        android:textColor="@color/white_color"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="5dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/btnCancel"
                android:text="cancel order"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/white_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                />
        </RelativeLayout>



    </ScrollView>


</LinearLayout>
