<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@color/white_color"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="10dp"
                    android:id="@+id/btnBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back"/>
                <TextView
                    android:layout_toRightOf="@id/btnBack"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_activity_personal_info"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/bg_grad_2"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtNama"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtFrom"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:lines="1"
                    android:hint="nama kamu"
                    android:selectAllOnFocus="true"
                    android:background="@null"
                    android:textStyle="bold"
                    android:textColorHint="#111111"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:imeOptions="actionDone"/>
                    <ImageView
                        android:id="@+id/editNama"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/edit_text_icon"
                        />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtFrom"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:lines="1"
                    android:hint="email kamu"
                    android:selectAllOnFocus="true"
                    android:background="@null"
                    android:textColorHint="#111111"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:imeOptions="actionDone"/>
                <ImageView
                    android:id="@+id/editEmail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/edit_text_icon"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtFrom"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:lines="1"
                    android:hint="password : "
                    android:selectAllOnFocus="true"
                    android:background="@null"
                    android:textColorHint="#111111"
                    android:textSize="16sp"
                    android:editable="false"/>
                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtFrom"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:lines="1"
                    android:hint="xxxxxxxx"
                    android:selectAllOnFocus="true"
                    android:background="@null"
                    android:textColorHint="#111111"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:enabled="false"/>
                <ImageView
                    android:id="@+id/editPassword"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/edit_text_icon"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtFrom"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:lines="1"
                    android:hint="Phone no : +62 "
                    android:selectAllOnFocus="true"
                    android:background="@null"
                    android:textColorHint="#111111"
                    android:textSize="16sp"
                    android:editable="false"/>
                <EditText
                    android:id="@+id/txtPhone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtFrom"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:lines="1"
                    android:hint="852222222"
                    android:selectAllOnFocus="true"
                    android:background="@null"
                    android:textColorHint="#111111"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:enabled="false"
                    android:imeOptions="actionDone"/>
                <ImageView
                    android:id="@+id/editPhone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/edit_text_icon"
                    />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_color_dark" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="36dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/current"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/txtFrom"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="40dp"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black_color"
                                    android:text="lokasi rumah"
                                    android:gravity="center_vertical"
                                    />
                                <ImageView
                                    android:id="@+id/editRumah"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/edit_text_icon"
                                    />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtRumah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="lokasi rumah"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="36dp"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/destination"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/txtdestination"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black_color"
                                    android:text="lokasi kantor"
                                    android:gravity="center_vertical"
                                    />
                                <ImageView
                                    android:id="@+id/editKantor"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/edit_text_icon"
                                    />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtKantor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="lokasi kantor"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/wrapperSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/plain_gradient_bg_btn"
                    android:layout_alignParentBottom="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:id="@+id/btnSimpan"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_color"
                            android:text="@string/simpan"
                            android:textSize="18dp"
                            android:layout_centerHorizontal="true"

                            />
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="38dp"
                            android:src="@drawable/right_arrow_white"
                            android:layout_toRightOf="@id/btnSimpan"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-8dp"/>
                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/wrapperVerify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@drawable/plain_gradient_bg_btn"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:id="@+id/btnVerifikasi"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_color"
                            android:text="@string/verify"
                            android:textSize="18dp"
                            android:layout_centerHorizontal="true"

                            />
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="38dp"
                            android:src="@drawable/right_arrow_white"
                            android:layout_toRightOf="@id/btnVerifikasi"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-8dp"/>
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>
